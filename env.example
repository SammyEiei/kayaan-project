# AI Generation Feature Configuration
# Copy this file to .env and update the values

# API Configuration
VITE_API_BASE_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080

# AI Model Configuration
VITE_OPENAI_MODEL=gpt-5-nano
VITE_OPENAI_API_KEY=your_openai_api_key_here

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.txt,.pdf,.doc,.docx

# Rate Limiting Configuration
VITE_GENERATION_RATE_LIMIT=5
VITE_PREVIEW_RATE_LIMIT=3
VITE_SAVE_RATE_LIMIT=10
VITE_TEMPLATE_RATE_LIMIT=2

# WebSocket Configuration
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=1000

# Content Types
VITE_SUPPORTED_CONTENT_TYPES=flashcard,quiz,note

# Development Configuration
VITE_DEBUG_MODE=false
VITE_MOCK_API=false

# Production Configuration
VITE_ENABLE_ANALYTICS=false
VITE_SENTRY_DSN=your_sentry_dsn_here

# Security Configuration
VITE_ENABLE_HTTPS=true
VITE_CORS_ORIGIN=*
